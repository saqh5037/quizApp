{
  "name": "aristotest-backend",
  "version": "1.0.0",
  "description": "Backend for AristoTest interactive learning platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npx babel src --out-dir dist --extensions .ts,.js --presets @babel/preset-typescript --ignore '**/*.test.ts'",
    "build-tsc": "tsc --skipLibCheck --noEmitOnError false",
    "start": "node dist/server.js",
    "start:prod": "pm2 start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "migrate": "sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && npm run migrate && npm run seed"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/bcrypt": "^6.0.0",
    "@types/fluent-ffmpeg": "^2.1.27",
